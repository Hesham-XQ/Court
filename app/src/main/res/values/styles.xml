<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#da6fa1</item>
        <item name="colorPrimaryDark">#911b52</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_layout" parent="@android:style/ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>


    <style name="text_layout" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_bottom</item>
    </style>

    <style name="team_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/team_margin_16</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="team_logo">
        <item name="android:layout_width">@dimen/img_width_height</item>
        <item name="android:layout_height">@dimen/img_width_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
