<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.courtcounterapp.MainActivity">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="@string/Real_Madrid"
                    android:textColor="@android:color/background_dark"
                    style="@style/team_name" />

                <ImageView
                    android:contentDescription="@string/madrid_logo"
                    android:src="@drawable/real"
                    style="@style/team_logo" />

                <TextView
                    android:id="@+id/goalRM"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/goal_text_60" />

                <Button
                    style="@style/button_layout"
                    android:background="#81C784"
                    android:onClick="goalrm"
                    android:text="@string/goal" />

                <TextView
                    android:id="@+id/foulRM"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/foul_text_45" />

                <Button
                    style="@style/button_layout"
                    android:background="#00B0FF"
                    android:onClick="foulrm"
                    android:text="@string/foul" />

                <TextView
                    android:id="@+id/ycardRM"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/card_text_30" />

                <Button
                    style="@style/button_layout"
                    android:background="#FFFF8D"
                    android:onClick="yellowcardrm"
                    android:text="@string/yellow" />

                <TextView
                    android:id="@+id/rcardRM"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="30sp" />

                <Button
                    style="@style/button_layout"
                    android:background="#FF7043"
                    android:onClick="redcardrm"
                    android:text="@string/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="@string/Barcelona"
                    android:textColor="#0000ff"
                    style="@style/team_name" />

                <ImageView
                    android:contentDescription="@string/barca_logo"
                    style="@style/team_logo"
                    android:src="@drawable/barcelona" />

                <TextView
                    android:id="@+id/goalB"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/goal_text_60" />

                <Button
                    style="@style/button_layout"
                    android:background="#81C784"
                    android:onClick="goalb"
                    android:text="@string/goal" />

                <TextView
                    android:id="@+id/foulB"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/foul_text_45" />

                <Button
                    style="@style/button_layout"
                    android:background="#00B0FF"
                    android:onClick="foulb"
                    android:text="@string/foul" />

                <TextView
                    android:id="@+id/ycardB"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/card_text_30" />

                <Button
                    style="@style/button_layout"
                    android:background="#FFFF8D"
                    android:onClick="yellowcardb"
                    android:text="@string/yellow" />

                <TextView
                    android:id="@+id/rcardB"
                    style="@style/text_layout"
                    android:text="@string/initial_value"
                    android:textSize="@dimen/card_text_30"/>

                <Button
                    style="@style/button_layout"
                    android:background="#FF7043"
                    android:onClick="redcardb"
                    android:text="@string/red" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin"
            android:layout_centerHorizontal="true"
            android:onClick="reset"
            android:text="@string/reset" />
    </RelativeLayout>

</ScrollView>